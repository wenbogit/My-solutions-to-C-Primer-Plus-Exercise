/*8.3
int main(void)
{
    int ch;
    int num_upper=0;
    int num_lower=0;
    int num_other=0;
    while((ch=getchar())!=EOF)
    {
        if(islower(ch))
            num_lower++;
        else if(isupper(ch))
            num_upper++;
        else
            num_other++;
    }
    printf("The number of uppercase: %d.\nThe number of lowercase: %d.\nThe number of other characters: %d.\n", num_upper, num_lower,num_other);
    return 0;
}
