/*8.2
int main(void)
{
    int ch;
    int i=0;

    printf("Please enter some characters: \n");

    while((ch=getchar())!=EOF)
    {
        if(i%10==0)
           printf("\n");

        if(ch=='\n')
            printf(" \\n %d", ch);
        else if(ch=='\t')
            printf(" \\t %d", ch);
        else if(ch<' ')
            printf(" ^%c %d", ch+64,ch);
        else
            printf(" %c %d", ch, ch);

        i++;
    }
    return 0;
}
*/

/*8.3
int main(void)
{
    int ch;
    int num_upper=0;
    int num_lower=0;
    int num_other=0;
    while((ch=getchar())!=EOF)
    {
        if(islower(ch))
            num_lower++;
        else if(isupper(ch))
            num_upper++;
        else
            num_other++;
    }
    printf("The number of uppercase: %d.\nThe number of lowercase: %d.\nThe number of other characters: %d.\n", num_upper, num_lower,num_other);
    return 0;
}
*/

/*8.4
int main(void)
{
    int ch;
    int num_word;
    int num_whitespace=0;
    int num_other=0;

    while((ch=getchar())!=EOF)
    {
        if(isspace(ch))
            num_whitespace++;
        else
            num_other++;
    }
    num_word=num_whitespace;
    printf("The average number of letters per word is %.2f", (float)num_other/num_word);

    return 0;
}
*/

/*8.5
int main(void)
{
    int high=100;
    int low=1;
    int guess=(high+low)/2;
    int response;

    printf("Is %d high(h), low(l) or correct(c)?\n", guess);
    while((response=getchar())!='c')
    {
        if(response=='h')
            high=guess-1;
        else if(response=='l')
            low=guess+1;
        guess=(high+low)/2;
        printf("How about %d?\n", guess);
        while(getchar()!='\n')
            continue;
    }
    printf("I know I can do that!\n");
    return 0;
}
*/

/*8.6
int getfirst(void)
{
    int ch;

    ch=getchar();
    while(isspace(ch))
        ch=getchar();
    while(getchar()!='\n')
        continue;
    return ch;
}
