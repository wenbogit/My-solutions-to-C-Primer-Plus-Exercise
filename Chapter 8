/*8.2
int main(void)
{
    int ch;
    int i=0;

    printf("Please enter some characters: \n");

    while((ch=getchar())!=EOF)
    {
        if(i%10==0)
           printf("\n");

        if(ch=='\n')
            printf(" \\n %d", ch);
        else if(ch=='\t')
            printf(" \\t %d", ch);
        else if(ch<' ')
            printf(" ^%c %d", ch+64,ch);
        else
            printf(" %c %d", ch, ch);

        i++;
    }
    return 0;
}
