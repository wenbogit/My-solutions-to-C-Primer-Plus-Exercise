/*7.5
int main(void)
{
    int sum=0;
    char ch;

    printf("Please enter the texts!\n");
    while((ch=getchar())!='#')
    {
        switch(ch)
        {
            case'.': printf("!");
                     sum++;
                     break;

            case'!': printf("!!");
                     sum++;
                     break;

            default: putchar(ch);
                     break;
        }
    }
    printf("The number of substitutions is %d", sum);
    return 0;
}
*/

