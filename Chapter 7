    while((ch=getchar())!='#')
    {
        if(ch==' ')
            num_space++;
        else if(ch=='\n')
            num_newline++;
        else
            num_other++;
    }
    printf("The number of spaces is %d.\nThe number of newline is %d.\nThe number of other character is %d.\n", num_space,num_newline,num_other);
    return 0;
}
