/*9.4
double hamonic_mean (double a, double b);
int main(void)
{
    double x, y;

    printf("Please enter two numbers: \n");
    scanf("%lf%lf", &x, &y);
    printf("The harmonic mean of two numbers is %.2f.\n", hamonic_mean(x, y));

    return 0;
}

double hamonic_mean(double a, double b)
{
    double ans;
    ans=(2*a*b)/(a+b);

    return ans;
}
*/
