/*9.6
void exchange(double *a, double *b, double *c);
int main(void)
{
    double x, y, z;

    printf("Please enter three double variable: \n");
    scanf("%lf%lf%lf", &x, &y, &z);
    exchange(&x, &y, &z);
    printf("The values are: %.2f %.2f %.2f", x, y, z);

    return 0;
}

void exchange(double *a, double *b, double *c)
{
    double t;
    if(*a>*b)
    {
        t=*a;
        *a=*b;
        *b=t;
    }
    if(*b>*c)
    {
        t=*b;
        *b=*c;
        *c=t;
    }
    if(*a>*b)
    {
        t=*a;
        *a=*b;
        *b=t;
    }
}
*/

