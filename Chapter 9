    scanf("%d", &column);
    printf("Enter the number of lines to be printed: \n");
    scanf("%d", &row);

    chline(ch, row, column);

    return 0;

}

void chline(char ch, int i, int j)
{
    int countr, countc;

    for(countr=0;countr<i;countr++)
    {
        for(countc=0;countc<j;countc++)
            printf("%c", ch);
        printf("\n");

