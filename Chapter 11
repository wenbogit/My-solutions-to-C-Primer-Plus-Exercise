        continue;

    puts("Enter strings:");
    if(s_gets(word, num))
    {
        puts(word);
    }

    return 0;
}

char * s_gets(char *words, int n)
{
    char *ans;
    int i=0;
    ans=fgets(words, n+1, stdin);
    if(ans)
        {
            while(words[i]!='\n' && words[i]!= ' '&& words[i]!= '\0' && words[i]!= '\t')
                i++;
            if(words[i]=='\n'||words[i]==' '||words[i]=='\t')
                words[i]='\0';
            else
                while(getchar()!='\n')
                continue;
        }
        return ans;
}
