    return 0;
}

void first_word(char ch)
{

    while(ch!=EOF)
    {
        if(isspace(ch))
            break;
        else
        {
            putchar(ch);
            ch=getchar();
        }
    }
    putchar('\n');
    puts("Done.");

}
