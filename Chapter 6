/*6.2
int main(void)
{
    const int ROW=5;

    int row;
    int col;

    for(row=0;row<ROW;row++)
    {
        for(col=row;col>=0;col--)
            printf("$");
        printf("\n");
    }
    return 0;
}
*/

/*6.3
int main(void)
{
    const int ROW=6;
    const int COL=6;

    int row;
    char col;

    for(row=0;row<ROW;row++)
    {
        for(col='F';col>='F'-row;col--)
            printf("%c",col);
        printf("\n");
    }
    return 0;
}
*/

/*6.4
int main()
{
    int n=6,x='A';
    char r,c;
    for(r='A'; n>=1; r++, n--)
    {
        for(c='A'; c<=r; c++, x++)
        printf("%c", x);
        printf("\n");
    }
    getch();
    return 0;
}
*/

/*6.5
#include <stdio.h>
int main(void)
{
    char a;

    printf("Please enter:");
    scanf("%c",&a);

    int i,j,m,n;
    for(i = 1; i <= 5; i++)
    {
        char b = a;
        for(j = 5 - i; j >=1; j--)
            {
                printf(" ");
            }
        for(m = i - 1; m >= 1; m--)
            {
                printf("%c",b - m);
            }
        printf("%c",a++);
        for(n = 1; n < i; n++)
            {
                printf("%c",b - n);
            }
                printf("\n");
    }
        return 0;
}
*/

/*6.6
int main(void)
{
    int lower,upper;
    int cube,square,n;

    printf("Please enter the lower limit: \n");
    scanf("%d", &lower);
    printf("Please enter the upper limit: \n");
    scanf("%d", &upper);

    for(n=lower;n<=upper;n++)
    {
        cube=n*n;
        square=n*n*n;
        printf("%5d%5d%5d\n",n,cube,square);
    }
    return 0;
}
