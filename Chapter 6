/*6.13
int main(void)
{
    int i;
    int sum=1;
    int power_of_two[8];

    for(i=0;i<8;i++)
    {
        power_of_two[i]=sum;
        sum*=2;
    }

    i=0;
    do
    {
        printf("%d ", power_of_two[i]);
        i++;
    }while(i<8);
    printf("\n");
    return 0;
}
*/

/*6.14
#define SIZE 8
int main(void)
{
    double arr[SIZE];
    double arr_cumul[SIZE];
    int i;

    printf("Enter %d numbers:\n", SIZE);

    for (i = 0; i < SIZE; i++)
    {
        printf("value #%d: ", i + 1);
        scanf("%lf", &arr[i]);
    }

    arr_cumul[0] = arr[0];      // set first element
    for (i = 1; i < SIZE; i++)
        arr_cumul[i] = arr_cumul[i-1] + arr[i];
        for (i = 0; i < SIZE; i++)
            printf("%8g ", arr[i]);
        printf("\n");
        for (i = 0; i < SIZE; i++)
            printf("%8g ", arr_cumul[i]);
        printf("\n");
    return 0;
}
*/

