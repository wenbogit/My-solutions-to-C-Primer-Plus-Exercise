/*6.12
#include <stdio.h>
int main(void)
{
    float a,b;
    int end;
    printf("Enter the times of calculation:");
    scanf("%d",&end);
    for (a=0,b=1.0;b<=end ;b++ )
    {
        if (b/2!=0)
            a+=1.0/b;
        else
            a-=1.0/b;
    }
    printf("%f",a);
    return 0;
}
