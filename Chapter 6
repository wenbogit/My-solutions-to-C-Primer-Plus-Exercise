    printf("Please enter two numbers: \n");

    while(scanf("%lf%lf",&a,&b)==2)
    {
        value=calculate(a,b);
        printf("The value is: %.2f\n",value);
        printf("Please enter another two numbers: \n");
    }

    printf("Error!\n");

    return 0;
}

double calculate(double x,double y)
{
    double z;
    z=(x-y)/(x*y);

    return z;
}
