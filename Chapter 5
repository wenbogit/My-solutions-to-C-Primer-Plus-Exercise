/*5.3
#define WEEK_TO_DAY 7
int main(void)
{
    int day;
    int week;
    int num;

    printf("Please insert the time: \n");
    scanf("%d", &num);
    while(num>0)
    {
        week=num/WEEK_TO_DAY;
        day=num%WEEK_TO_DAY;
        printf("%d days are %d weeks, %d days.\n",num,week,day);
        printf("Please insert the time: \n");
        scanf("%d", &num);
    }
    printf("Error!\n");
    return 0;
}
